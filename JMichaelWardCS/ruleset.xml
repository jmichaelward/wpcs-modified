<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="JMichaelWardCS" namespace="JMichaelWardCS\JMichaelWardCS" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">
    <description>A modified set of WordPress Coding Standards for J. Michael Ward</description>

    <!-- Include WordPress ruleset with exclusions. -->
    <rule ref="WordPress">
        <!-- Allow short array syntax. -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax" />

        <!-- Stop warning about non- Underscored_Class_Names. -->
        <exclude name="PEAR.NamingConventions.ValidClassName" />

        <!-- Remove default WordPress filename rules. Modified by JMichaelWardCS.FileNameMod. -->
        <exclude name="WordPress.Files.FileName" />
    </rule>

    <!-- Additions to replace WordPress exclusions and match preferences. -->
    <!-- Follow PSR-1 class naming convention. -->
    <rule ref="Squiz.Classes.ValidClassName" />
</ruleset>